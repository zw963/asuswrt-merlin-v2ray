            {
                // tproxy é€æ˜ä»£ç†å¿…éœ€ã€‚
                "type": "field",
                "inboundTag": ["transparent"],
                "port": 53,
                "network": "udp",
                "outboundTag": "dns-outbound"
            },
            {
                // redirect é€æ˜ä»£ç†å¿…éœ€ã€‚
                "type": "field",
