{
    "log": {
        "access": "/var/log/xray/access.log",
        "error": "/var/log/xray/error.log",
        "loglevel": "warning"
    },
    "dns": {
        "servers": ["https+local://dns.google/dns-query"]
    },
    "inbounds": [
        {
            "protocol": "vless",
            "port": 22334,
            "settings": {
                "decryption": "none",
                "clients": [
                    {
                        "id": "NEWUUID",
                        "flow": "xtls-rprx-vision"
                    }
                ]
            },
            "streamSettings": {
                "network": "tcp",
                "security": "reality",
                "realitySettings": {
                    "dest": "www.hko.gov.hk:443",
                    "serverNames": ["www.hko.gov.hk"],
                    "privateKey": "REALITY_PRIVATE_KEY_HERE",
                    "shortIds": [""]
                }

            }
        },
        {
            "protocol": "shadowsocks",
            "port": 22335, // 监听端口
            "settings": {
                "method": "2022-blake3-chacha20-poly1305",
                "password": "SSPASS"
            }
        }
    ],
    "outbounds": [
        {
            "protocol": "freedom",
            "settings": {
                // 默认是 AsIs, 不会使用 V2ray 内置的 DNS 服务器进行解析,
                // 改为 UseIP, 表示使用 V2ray 内置 DNS 服务器将域名解析为 IP 之后再建立连接。
                "domainStrategy": "UseIP"
            }
        },
        {
            "tag": "block",
            "protocol": "blackhole",
            "settings": {}
        }
    ],
    "routing": {
        "rules": [
            {
                "type": "field",
                "ip": [
                    "ext:geoip-only-cn-private.dat:private",
                    "ext:geoip-only-cn-private.dat:cn"
                ],
                "outboundTag": "block"
            }
        ]
    },
    "policy": {
        "levels": {
            "0": {
                "bufferSize": 2048
            }
        }
    }
}
